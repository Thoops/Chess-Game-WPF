<Page x:Class="ChessApp.LoadGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChessApp"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="LoadGame" Background="Silver">
    
    <StackPanel>
        <TextBlock Text="Choose a Saved Game To Load" HorizontalAlignment="Center" FontSize="50" FontWeight="UltraBold" Foreground="Red"/>
        <Button Content="Slot 1" Width="200" Height="50" Margin="0, 50, 0, 0" Click="Slot1_Click"/>
        <Button Content="Slot 2" Width="200" Height="50" Margin="0, 50, 0, 0" Click="Slot2_Click"/>
        <Button Content="Slot 3" Width="200" Height="50" Margin="0, 50, 0, 0" Click="Slot3_Click"/>
    </StackPanel>
</Page>
