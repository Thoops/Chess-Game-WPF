<Page x:Class="ChessApp.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChessApp"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="MainPage" Background="Silver">

    <Grid>
        <Border Padding="10">
            <StackPanel>

                <TextBlock Text="Chess Game" HorizontalAlignment="Center" FontSize="50" FontWeight="Heavy" Foreground="Red"/>
                <Button x:Name="CompButton" Content="Play Against Computer" Margin="10,100,10,10" Height="50" Width="200" Click="CompButton_Click"/>
                <Button x:Name="FriendButton" Content="Play Against Friend" Margin="10,100,10,10" Height="50" Width="200" Click="FriendButton_Click"/>
                <Button x:Name="LoadButton" Content="Load Game" Margin="10,100,10,10" Height="50" Width="200" Click="LoadButton_Click"/>
                <Button x:Name="TestButton" Content="Play Against Yourself" Margin="10,100,10,10" Height="50" Width="200" Click="TestButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>