<Page x:Class="ChessApp.SelectColor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChessApp"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="SelectColor" Background="Silver">
    
    <StackPanel>
        <TextBlock Text="Choose Your Color" HorizontalAlignment="Center" FontSize="50" FontWeight="Heavy" Foreground="Maroon"/>
        <Button x:Name="WhiteButton" Content="Play as White" Width="200" Height="50" Margin="0,50,0,0" Click="WhiteButton_Click"/>
        <Button x:Name="BlackButton" Content="Play as Black" Width="200" Height="50" Margin="0,50,0,0" Click="BlackButton_Click"/>
    </StackPanel>
</Page>